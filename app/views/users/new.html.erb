<h1>Create Chirps account</h1>


<%= form_for @user do |f| %>
  <%= f.label :username %>:
  <%= f.text_field :username %><br>

  <%= f.label :bio %>:
  <%= f.text_area :bio %><br>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :profile_pic %>
  <%= f.text_field :profile_pic %>



  <%= f.submit %>
<% end %>