<h1>Chirps!</h1>


<h3>Create New Chirp: <%= link_to "Write a new Chirp!", new_chirp_path %></h3><br>
<br>

<ul>
<% @chirps.reverse.each do |chirp| %>
<br>
  
<strong>@<%= link_to chirp.user.username, user_path(chirp.user_id) %></strong>
<%= chirp.created_at.strftime("%m/%d/%Y at %I:%M%p") %>
<p><%= chirp.content %></p>
<%= image_tag("https://media.giphy.com/media/11ec1pd0tpSFUc/giphy.gif", :alt => "smiley_face_gif") %><br>

 <%= button_to 'Sqwuak', chirp_squwaks_path(chirp), method: :post %> 
 <%= button_to 'Follow', follwers_path(chirp.user_id), method: :get %>

 <p><%= chirp.squwaks.count %> <%= (chirp.squwaks.count) == 1 ? 'Sqwuak' : 'Sqwuaks'%></p>
 
 
 
 
<br><br>
<% end %>

</ul>